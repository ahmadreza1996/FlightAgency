@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Login/_LoginLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.U_FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.U_LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.U_Username)
        </th>
