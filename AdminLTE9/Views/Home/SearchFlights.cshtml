@{
    ViewBag.Title = "Flights";
    Layout = "~/Views/Shared/Home/SearchFlights/_SearchFlightsLayout.cshtml";
}

<style>
    .newst {
        min-height: 100%;
        /*#ecf0f5;*/
        background-color: dimgray;
